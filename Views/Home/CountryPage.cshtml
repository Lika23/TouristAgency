@using TouristAgency.Models

@model Country
<!DOCTYPE HTML>

<html>
<head>
    <title>Adriatic</title>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="~/Content/main.css" rel="stylesheet" />
</head>
<body class="subpage">

    <!-- Main -->
    <div id="main">

        <!-- Section -->
        <section class="wrapper">
            <div class="inner">
                <header class="align-center">
                    <h1>@Model.Name</h1>
                </header>
                <div class="flex flex-2">
                    <div class="col col2">
                        <h3>Достопримечательности</h3>
                        <p>@Model.Attractions</p>
                        <h3>История</h3>
                        <p>@Model.History</p>
                        <h3>Активный отдых</h3>
                        <p>@Model.Leisure</p>
                        <h3>Чаевые</h3>
                        <p>@Model.Tip</p>
                    </div>
                    <div class="col col1 first">
                        @foreach (var i in Model.Pictures)
                        {
                        <div class="image round fit">
                            <img src="~/images/@i.Url" />
                        </div>
                            }
                    </div>
                </div>

            </div>
        </section>

        <!-- Section -->
            <section class="wrapper style1">
                <div class="inner">
                    <header class="align-center">
                        <h2>Туры</h2>
                        <p>У нас есть туры в эти замечательные города, которые вы не отличите от рая.</p>
                    </header>

                    <div class="flex flex-3">
                        @foreach (Tour t in Model.Tours)
                        {

                        <div class="col align-center">

                            <div class="image round fit">
                                
                                    <a href="/Home/TourPage/@t.Id">

                                        <img src="~/images/@t.Pictures[0].Url" />
                                        
                                    </a>
                                </div>
                            
                            <a href="/Home/TourPage/@t.Id">
                                <h3>@t.City</h3>
                            </a>
                            <p>@t.Hotel</p>
                        </div>
                            
                        }
                        </div>
                            

                    </div>
            </section>
       
    </div>


    <!-- Scripts -->
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="~/Scripts/jquery.scrollex.min.js"></script>
    <script src="~/Scripts/main.js"></script>
    <script src="~/Scripts/skel.min.js"></script>
    <script src="~/Scripts/util.js"></script>
    <script src="~/Scripts/jquery.scrolly.min.js"></script>
</body>
</html>