@model TouristAgency.Models.CreateTourModel


<!DOCTYPE html>


@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    <br />

    <div class="form-horizontal" style="margin:40px">
        <hr />
        <h2 style="text-align:center">Добавление тура</h2>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.Label("Город", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.EditorFor(model => model.Tour.City, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tour.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Отель", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.EditorFor(model => model.Tour.Hotel, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tour.Hotel, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Дата ", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.EditorFor(model => model.Tour.StartDate, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Tour.StartDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Страна", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.DropDownListFor(m => m.Country, new SelectList(ViewBag.Countries)," ")
                @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Ночей", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.EditorFor(model => model.Tour.Night, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tour.Night, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.Label("Питание", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.EditorFor(model => model.Tour.Nutrition, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tour.Nutrition, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Цена", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="6u 12u$(xsmall)">
                @Html.EditorFor(model => model.Tour.Price, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tour.Price, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Фотографии", new { @class = "control-label col-md-2" })
            <input type="file" name="uploads" /><br>
            <input type="file" name="uploads" /><br>
            <input type="file" name="uploads" /><br>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 form-inline">
                <input type="submit" value="Создать" class="log-btn" />
            </div>
        </div>
    </div>
}
@Scripts.Render("~/bundles/jqueryval")